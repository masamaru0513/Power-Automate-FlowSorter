{
    "manifest_version": 3,
    "name": "Power Automate FlowSorter",
    "description": "PowerAutomateのフローを種類ごとに自動で並べ替えます",
    "version": "1.0",
    "icons": {
        "64": "logo/logo.png"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["https://make.powerautomate.com/*"],
        "run_at":"document_start"
    }],
    "background": {
        "service_worker": "service-worker.js"
    },
    "permissions": [
        "tabs"
    ]
}
